#!/usr/bin/bash
#

if ! [[ $(pidof pipewire > /dev/null)  ]]; then
	swaylock --screenshots \
		--ignore-empty-password \
		--daemonize \
		--indicator-caps-lock \
		--indicator \
		--clock \
		--timestr "󰥔 %Hh %Mm %Ss"\
		--datestr "󰃭 %b-%d-%Y" \
		--show-failed-attempts \
		--indicator-idle-visible
fi
